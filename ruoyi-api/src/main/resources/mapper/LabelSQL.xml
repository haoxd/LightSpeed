<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lexus.base.mvc.dao.mapper.LabelMapper">


    <select id="search" resultType="com.lexus.base.mvc.pojo.Label" parameterType="java.lang.String">
        SELECT
        *
        FROM tb_label a
        where a.state='1'
        <if test="labelName != null and labelName != ''">
            <bind name="pattern" value="'%' + labelName + '%'"/>
            AND a.labelname like #{pattern}
        </if>
        ORDER BY  a.fans
    </select>


</mapper>